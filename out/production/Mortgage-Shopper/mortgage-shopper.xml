<?xml version="1.0" encoding="UTF-8"?>
<project name="mortgage-shopper" default="all">
  
  
  <property file="mortgage-shopper.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8.0_241" value="${jdk.home.1.8.0_241}/bin"/>
  <path id="jdk.classpath.1.8.0_241">
    <fileset dir="${jdk.home.1.8.0_241}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8.0_241}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8.0_241}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8.0_241"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Mortgage-Shopper -->
  
  <dirname property="module.mortgage-shopper.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mortgage-shopper" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mortgage-shopper" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mortgage-shopper" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mortgage-shopper" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="mortgage-shopper.output.dir" value="${module.mortgage-shopper.basedir}/out/production/Mortgage-Shopper"/>
  <property name="mortgage-shopper.testoutput.dir" value="${module.mortgage-shopper.basedir}/out/test/Mortgage-Shopper"/>
  
  <path id="mortgage-shopper.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mortgage-shopper.module.production.classpath">
    <path refid="${module.jdk.classpath.mortgage-shopper}"/>
    <pathelement location="${idea.home}/lib/mysql-connector-java-8.0.19.jar"/>
  </path>
  
  <path id="mortgage-shopper.runtime.production.module.classpath">
    <pathelement location="${mortgage-shopper.output.dir}"/>
    <pathelement location="${idea.home}/lib/mysql-connector-java-8.0.19.jar"/>
  </path>
  
  <path id="mortgage-shopper.module.classpath">
    <path refid="${module.jdk.classpath.mortgage-shopper}"/>
    <pathelement location="${mortgage-shopper.output.dir}"/>
    <pathelement location="${idea.home}/lib/mysql-connector-java-8.0.19.jar"/>
  </path>
  
  <path id="mortgage-shopper.runtime.module.classpath">
    <pathelement location="${mortgage-shopper.testoutput.dir}"/>
    <pathelement location="${mortgage-shopper.output.dir}"/>
    <pathelement location="${idea.home}/lib/mysql-connector-java-8.0.19.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.mortgage-shopper">
    <patternset refid="ignored.files"/>
    <exclude name="out/**"/>
    <exclude name="out/artifacts/**"/>
    <exclude name="out/artifacts/Mortgage_Shopper_jar/**"/>
    <exclude name="out/artifacts/Mortgage_Shopper_jar/images/**"/>
    <exclude name="out/production/**"/>
    <exclude name="out/production/Mortgage-Shopper/**"/>
    <exclude name="out/production/Mortgage-Shopper/Docs/**"/>
    <exclude name="out/production/Mortgage-Shopper/.idea/**"/>
    <exclude name="out/production/Mortgage-Shopper/.idea/artifacts/**"/>
    <exclude name="out/production/Mortgage-Shopper/images/**"/>
    <exclude name="out/production/Mortgage-Shopper/META-INF/**"/>
    <exclude name="out/production/Mortgage-Shopper/mortgageShopper/**"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mortgage-shopper">
    <patternset refid="excluded.from.module.mortgage-shopper"/>
  </patternset>
  
  <path id="mortgage-shopper.module.sourcepath">
    <dirset dir="${module.mortgage-shopper.basedir}/../../Dropbox">
      <include name="Mortgage-Shopper"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mortgage-shopper" depends="compile.module.mortgage-shopper.production,compile.module.mortgage-shopper.tests" description="Compile module Mortgage-Shopper"/>
  
  <target name="compile.module.mortgage-shopper.production" depends="register.custom.compilers" description="Compile module Mortgage-Shopper; production classes">
    <mkdir dir="${mortgage-shopper.output.dir}"/>
    <javac2 destdir="${mortgage-shopper.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mortgage-shopper}/javac">
      <compilerarg line="${compiler.args.mortgage-shopper}"/>
      <bootclasspath refid="mortgage-shopper.module.bootclasspath"/>
      <classpath refid="mortgage-shopper.module.production.classpath"/>
      <src refid="mortgage-shopper.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mortgage-shopper"/>
    </javac2>
    
    <copy todir="${mortgage-shopper.output.dir}">
      <fileset dir="${module.mortgage-shopper.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mortgage-shopper.tests" depends="register.custom.compilers,compile.module.mortgage-shopper.production" description="compile module Mortgage-Shopper; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mortgage-shopper" description="cleanup module">
    <delete dir="${mortgage-shopper.output.dir}"/>
    <delete dir="${mortgage-shopper.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mortgage-shopper" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mortgage-shopper" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.mortgage-shopper:jar" value="${basedir}/out/artifacts/Mortgage_Shopper_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Mortgage-Shopper.jar" value="${artifacts.temp.dir}/Mortgage-Shopper.jar"/>
  </target>
  
  <target name="artifact.mortgage-shopper:jar" depends="init.artifacts, compile.module.mortgage-shopper" description="Build &#39;Mortgage-Shopper:jar&#39; artifact">
    <property name="artifact.temp.output.mortgage-shopper:jar" value="${artifacts.temp.dir}/Mortgage_Shopper_jar"/>
    <mkdir dir="${artifact.temp.output.mortgage-shopper:jar}"/>
    <jar destfile="${temp.jar.path.Mortgage-Shopper.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${mortgage-shopper.output.dir}"/>
      <zipfileset src="${idea.home}/lib/mysql-connector-java-8.0.19.jar"/>
    </jar>
    <copy file="${temp.jar.path.Mortgage-Shopper.jar}" tofile="${artifact.temp.output.mortgage-shopper:jar}/Mortgage-Shopper.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.mortgage-shopper:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.mortgage-shopper:jar}"/>
    <copy todir="${artifact.output.mortgage-shopper:jar}">
      <fileset dir="${artifact.temp.output.mortgage-shopper:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>